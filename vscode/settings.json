{
    "[lua]": { "editor.defaultFormatter": "sumneko.lua" },
    "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[scss]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[nginx]": { "editor.defaultFormatter": "raynigon.nginx-formatter" },
    "[markdown]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "editor.accessibilitySupport": "off",
    "editor.defaultColorDecorators": "auto",
    "editor.definitionLinkOpensInPeek": true,
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.fontLigatures": true,
    "editor.fontSize": 17,
    "editor.hideCursorInOverviewRuler": true,
    "editor.lineNumbers": "relative",
    "editor.linkedEditing": true,
    "editor.minimap.enabled": true,
    "editor.renderLineHighlightOnlyWhenFocus": true,
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": true,
    "editor.stickyTabStops": true,
    "explorer.compactFolders": false,
    "explorer.confirmDelete": true,
    "extensions.experimental.affinity": { "asvetliakov.vscode-neovim": 1 },
    "files.associations": { "*.css": "tailwindcss" },
    "files.autoSave": "afterDelay",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "material-icon-theme.files.associations": {
        "*.view.tsx": "razor",
        "*.client.tsx": "robots",
        "*.api.ts": "http",
        "*.mocks.ts": "mocha",
        "*.mocks.tsx": "mocha",
        "links.ts": "http",
        "types.ts": "typescript-def",
        "*.types.ts": "typescript-def",
        "*.step.tsx": "sublime"
    },
    "material-icon-theme.folders.associations": {
        "notification": "messages",
        "http-client": "functions",
        "dom": "views"
    },
    "nxConsole.showNodeVersionOnStartup": false,
    "outline.showNumbers": true,
    "search.showLineNumbers": true,
    "tailwindCSS.emmetCompletions": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "vscode-neovim.logOutputToConsole": false,
    "vscode-neovim.neovimExecutablePaths.darwin": "nvim",
    "vscode-neovim.normalSelectionDebounceTime": 100,
    "vscode-neovim.revealCursorScrollLine": true,
    "window.commandCenter": false,
    "window.customTitleBarVisibility": "never",
    "window.titleBarStyle": "native",
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.iconTheme": "catppuccin-mocha",
    "workbench.layoutControl.enabled": true,
    "workbench.productIconTheme": "a-file-icon-vscode-product-icon-theme",
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": true,
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "git.openRepositoryInParentFolders": "never",
    "tailwindCSS.hovers": true,
    "tailwindCSS.suggestions": true,
    "tailwindCSS.classAttributes": [
        "class",
        "className",
        "ngClass",
        "class:list",
        "cva",
        "container"
    ],
    "notebook.insertFinalNewline": true,
    "notebook.stickyScroll.enabled": true,
    "terminal.integrated.shellIntegration.decorationsEnabled": "gutter",
    "redhat.telemetry.enabled": false,
}
