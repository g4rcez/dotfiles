set -xe
HOME_CONFIG_DIR="$HOME/.config"
DOTFILES_CONFIG_DIR="$HOME/dotfiles/config"
mkdir -p "$HOME/tools" 
mkdir -p "$HOME/.tmp" 
mkdir -p "$HOME/.config"
source "$HOME/dotfiles/zsh/utils.sh"
ln -sf $PWD/zsh/zshrc $HOME/.zshrc

########################################################################################################################
##### mise config
function installmise() {
    curl https://mise.run | sh
    ~/.local/bin/mise activate

    ~/.local/bin/mise install bun@latest
    ~/.local/bin/mise use bun@latest

    ~/.local/bin/mise install node@latest
    ~/.local/bin/mise use node@latest

    ~/.local/bin/mise doctor
}
checkcommand "mise" installmise
jarvis sync
