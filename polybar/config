[colors]
;background = ${xrdb:color0:#222}
background = #121212
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #bbb
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/mybar]
monitor = eDP1
separator = |
width = 100%
height = 25
;offset-x = 1%
;offset-y = 90%
margin-bottom = 0
margin-top = 0
radius = 0.0
fixed-center = true
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = #0a81f5

border-size = 0
border-color = #00000000

padding-left = 5
padding-right = 5

module-margin-left = 5
module-margin-right = 5

font-0 = "Cantarell:size=9:weight=bold;1"
font-1 = "FontAwesome:size=9:weight=bold;1"

modules-left = wlan xwindow 
modules-center = date volume 
modules-right = backlight memory cpu battery powermenu

tray-position = center
tray-padding = 0

[module/xwindow]
type = internal/xwindow
label =  %{T1}  %{T-}  %title:0:20:...%
format-underline = #0a81f5

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
format-underline = #f90000

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #a52626
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc

[module/wlan]
type = custom/script
exec = "echo $(ip addr show dev wlp2s0 | grep inet | grep 'brd' | cut -d '/' -f1 | tr -d 'a-z ') $(nmcli device wifi | grep ^'*' | awk '{print $2}'): $(nmcli device wifi | grep ^'*' | awk '{print $7}')%"
interval = 1
format-underline = #0a6cf5

[module/date]
type = internal/date
interval = 0

date = "%A - %d/%m/%Y, "
date-alt = " %Y-%m-%d"

time = %H:%M:%S
time-alt = %H:%M:%S

format-prefix = %{T1} %{T-}
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

[module/volume]
format-underline = #0a6cf5
type = internal/volume
format-volume = <label-volume> <bar-volume>
label-volume = %percentage% %{T1} %{T-}: 
label-volume-foreground = ${root.foreground}
format-muted-prefix = %{T1} %{T-}
format-prefix-foreground = ${colors.foreground-alt}
format-muted-foreground = ${colors.foreground-alt}
bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = true
bar-volume-indicator = |
bar-volume-indicator-font = 0
bar-volume-fill = _
bar-volume-fill-font = 0
bar-volume-empty = _
bar-volume-empty-font = 0
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 99
format-charging = <animation-charging> <label-charging>


format-discharging = <label-discharging> <ramp-capacity>
label-charging = %percentage%%
label-discharging = %percentage%%

; Available tokens:
;   %percentage% (default)
label-full =  %percentage%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

bar-capacity-width = 10

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/backlight]
type = internal/backlight
card = intel_backlight
click-left = connman-gtk

format = <label> <bar>
label = ""

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = -
bar-fill-font = 2
bar-fill-foreground = #ffff00
bar-empty = -
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/menu-apps]
type = custom/menu

; If true, <label-toggle> will be to the left of the menu items (default).
; If false, it will be on the right of all the items.
expand-right = true

; "menu-LEVEL-N" has the same properties as "label-NAME" with
; the additional "exec" property
;
; Available exec commands:
;   menu-open-LEVEL
;   menu-close
; Other commands will be executed using "/usr/bin/env sh -c $COMMAND"

menu-0-0 = Browsers
menu-0-0-exec = menu-open-1
menu-0-2 = Multimedia
menu-0-2-exec = menu-open-2

menu-1-0 = Firefox
menu-1-0-exec = firefox &
menu-1-1 = Chromium
menu-1-1-exec = chromium &

menu-2-0 = Gimp
menu-2-0-exec = gimp &
menu-2-1 = Scrot
menu-2-1-exec = scrot &

label-open = Apps
label-close = x

; Optional item separator
; Default: none
label-separator = |

[module/powermenu]
type = custom/menu

label-open = 
label-open-foreground = #ff5c56
label-close =  cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = power off
menu-2-0-exec = shutdown now
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true
;compositing-background = xor
compositing-background = screen
;compositing-foreground = source
compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

