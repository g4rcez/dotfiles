[module/spotify]
type = custom/script
interval = 5
format-prefix = " "
format = <label>
format-prefix-foreground = ${colors.foreground}
exec = python /home/garcez/dotfiles/polybar/spoti.py -f '{artist}: {song}'
format-underline = #1db954

[module/wlan]
type = custom/script
exec = nmcli -t -c no dev wifi | grep '^*' | cut -d ':' -f2 
interval = 20
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-underline = #0a6cf5

