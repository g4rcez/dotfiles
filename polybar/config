[module/wifi-mod]
type = custom/script
click-left = nm-connection-editor
exec = nmcli -t -c no dev wifi | grep '^*' | cut -d ':' -f2 
interval = 10
format-prefix = " "
format-prefix-foreground = ${colors.foreground}

[module/batt]
type = custom/script
click-left = nm-connection-editor
exec = upower -i /org/freedesktop/UPower/devices/battery_BAT1 | grep percentage | sed 's/[^0-9%]*//g'
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.foreground}

[module/calendar]
