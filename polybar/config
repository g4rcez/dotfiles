[colors]
background = #0C1014
background-alt = #444
foreground = #bbb
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/edp1]
monitor = eDP-1
separator =
width = 100%
height = 22
margin-bottom = 0
margin-top = 0
radius = 0.0
fixed-center = true
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 0
border-size = 0
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1
font-0 = "NotoSans:size=8;1"
font-1 = "Ubuntu Nerd Font:size=9:weight=bold;1"
modules-left = wlan menu-apps works
modules-center = xwindow
modules-right = pulseaudio spotify
override-redirect = false
wm-name = kwin
pseudo-transparency = true

[bar/hdmi1]
monitor = HDMI-1
separator =
width = 100%
height = 22
margin-bottom = 0
margin-top = 0
radius = 0.0
fixed-center = true
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 0
