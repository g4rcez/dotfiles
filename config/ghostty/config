# keybind
keybind = global:super+shift+zero=toggle_quick_terminal
keybind = super+p>-=new_split:down
keybind = super+p>\=new_split:right
keybind = super+p>equal=equalize_splits
keybind = super+p>h=previous_tab
keybind = super+p>l=next_tab
keybind = super+p>n=new_window
keybind = super+p>r=reload_config
keybind = super+p>t=new_tab

