            background 24 24 37
            emphasis_0 194 65 12
            emphasis_1 14 116 144
            emphasis_2 137 180 250
            emphasis_3 159 18 57
        }
        text_selected {
            base 205 214 244
            background 17 17 27
            emphasis_0 194 65 12
            emphasis_1 14 116 144
            emphasis_2 137 180 250
            emphasis_3 159 18 57
        }
        ribbon_selected {
            base 24 24 37
            background 137 180 250
            emphasis_0 153 27 27
            emphasis_1 194 65 12
            emphasis_2 159 18 57
            emphasis_3 30 64 175
        }
        ribbon_unselected {
            base 24 24 37
            background 49 50 68
            emphasis_0 153 27 27
            emphasis_1 205 214 244
            emphasis_2 30 64 175
            emphasis_3 159 18 57
        }
        table_title {
            base 137 180 250
            background 0
            emphasis_0 194 65 12
            emphasis_1 14 116 144
            emphasis_2 137 180 250
            emphasis_3 159 18 57
        }
        table_cell_selected {
            base 205 214 244
            background 17 17 27
            emphasis_0 194 65 12
            emphasis_1 14 116 144
            emphasis_2 137 180 250
            emphasis_3 159 18 57
        }
        table_cell_unselected {
            base 205 214 244
            background 24 24 37
            emphasis_0 194 65 12
            emphasis_1 14 116 144
            emphasis_2 137 180 250
            emphasis_3 159 18 57
        }
        list_selected {
            base 205 214 244
            background 17 17 27
            emphasis_0 194 65 12
            emphasis_1 14 116 144
            emphasis_2 137 180 250
            emphasis_3 159 18 57
        }
        list_unselected {
            base 205 214 244
            background 24 24 37
            emphasis_0 194 65 12
            emphasis_1 14 116 144
            emphasis_2 137 180 250
