# Windows: Alt + [DIR]
shift + alt - h : yabai -m window --focus west
shift + alt - j : yabai -m window --focus south
shift + alt - k : yabai -m window --focus north
shift + alt - l : yabai -m window --focus east

# Auto balance
shift + alt - 0 : yabai -m space --balance

# Resize windows
# Send: Shift + ALT + [aswd]
shift + alt - a : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
shift + alt - s : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
shift + alt - w : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
shift + alt - d : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# Sends Window to Space and shifts focus
# Send: Shift + alt + [1234]
shift + alt - 1 : yabai -m window --space  1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space  2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space  3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space  4; yabai -m space --focus 4

# Send focus to a specific space
# Spaces:  Alt + [NUM]
# alt - 1 : yabai -m space --focus 1
# alt - 2 : yabai -m space --focus 2
# alt - 3 : yabai -m space --focus 3
# alt - 4 : yabai -m space --focus 4

# "Swaps" with another Window, obtaining its size and position
# Swap: Ctrl + Alt + [DIR]
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - l : yabai -m window --swap east

# Floating Move
shift + ctrl - h : yabai -m window --move rel:-20:0
shift + ctrl - j : yabai -m window --move rel:0:20
shift + ctrl - k : yabai -m window --move rel:0:-20
shift + ctrl - l : yabai -m window --move rel:20:0

# Rotate
alt - r : yabai -m space --rotate 90
alt - y : yabai -m space --mirror y-axis

##### Toggling
alt - t: yabai -m window --toggle float; yabai -m window --toggle stack

# Fullscreen (still includes gaps)
alt - f : yabai -m window --toggle zoom-fullscreen
