#!/bin/bash
TRAPWINCH() {
  zle && { zle reset-prompt; zle -R }
}
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="vandalvnl"
CASE_SENSITIVE="false"
DISABLE_UNTRACKED_FILES_DIRTY="true"
ENABLE_CORRECTION="true"
HIST_STAMPS="yyyy-mm-dd"
HYPHEN_INSENSITIVE="true"

plugins=(
  docker
  forgit
  fzf
  fzf-tab
  git
  zsh-autosuggestions
  zsh-syntax-highlighting
)

# Haskell
[ -f "/Users/garcez/.ghcup/env" ] && source "/Users/garcez/.ghcup/env" # ghcup-env

# Google cloud
if [ -f '$HOME/tools/google-cloud-sdk/path.zsh.inc' ]; then . '$HOME/tools/google-cloud-sdk/path.zsh.inc'; fi
if [ -f '$HOME/tools/google-cloud-sdk/completion.zsh.inc' ]; then . '$HOME/tools/google-cloud-sdk/completion.zsh.inc'; fi

# Fzf imports
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
[ -f ~/.fzf/shell/key-bindings.zsh ] && source ~/.fzf/shell/key-bindings.zsh

source $ZSH/oh-my-zsh.sh
source $HOME/dotfiles/zsh/export.sh
source $HOME/dotfiles/zsh/alias.sh
source $HOME/.iterm2_shell_integration.zsh;

######################### Setup tools #########################
compdef _dotnet_zsh_complete dotnet

# zoxide
eval "$(zoxide init zsh)"

# starship
eval "$(starship init zsh)"

autoload -Uz compinit
compinit

####################### TMUX ##########################
# auto into tmux session
if [[ -n "\$PS1" ]] && [[ -z "\$TMUX" ]] && [[ -n "\$SSH_CONNECTION" ]]; then
  tmux attach-session -t remote || tmux new-session -s remote
fi
eval 
AMPLI_AC_ZSH_SETUP_PATH=/Users/garcez/Library/Caches/@amplitude/ampli/autocomplete/zsh_setup && test -f $AMPLI_AC_ZSH_SETUP_PATH && source $AMPLI_AC_ZSH_SETUP_PATH; # ampli autocomplete setup
